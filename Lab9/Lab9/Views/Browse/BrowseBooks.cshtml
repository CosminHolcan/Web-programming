
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <title>Browse books</title>
    <script src="~/Scripts/jquery-3.4.1.js"></script>

    <script src="browse.js"></script>
    <script>
        function buttonFindClick() {
            Array.prototype.pushArray = function (arr) {
                this.push.apply(this, arr);
            };

            var author = $("#author").val();
            var genre = $("#genre").val();

            var books = [];

            $.getJSON(
                "/Browse/GetBooks",
                { author: author, genre : genre },
                function(data, status) {
                    books.pushArray(data["books"]);
                    printAllBooks(books);
                    clickEditButtons(books);
                }
            )
            
        }

        function printAllBooks(books) {
            let content = "";
            for (var book of books) {
                content += "<tr>"
                let editButtonName = "edit-book-" + book.id + "-btn";
                content += "<td>" +book.author + "</td>";
                content += "<td>" +book.title + "</td>";
                content += "<td>" +book.pages + "</td>";
                content += "<td>" +book.genre + "</td>";
                content += "<td>" +book.lended + "</td>";
                content += "<td><button type=\"button\" id=\"" + editButtonName + "\">Edit</button></td></tr>";
            }
            $("#tbodyTable").html(content);
        }


        function buttonAddClick() {
            location.href = "/AddBook";
        }

        function clickEditButtons(books) {
            for (const book of books) {
                let buttonID = "#edit-book-" + book.id + "-btn";
                $(buttonID).click(function () {
                    location.href = "/EditBook/?id=" + book.id;
                });
        }
        }
           


        $(document).ready(function () {
            try {
                if (JSON.parse(sessionStorage["currentUser"]) !== null) {
                    $('#submitButton').click(buttonFindClick);
                    $('#addButton').click(buttonAddClick);
                    $('#submitButton').trigger('click');
                }
                else {
                    location.href = "/Login";
                }
            }
            catch (err) {
                location.href = "/Login";
            }
        });
    </script>
    <style type="text/css">
        body {
            background-image: url("../../books_image.jpg");
        }

        p {
            font-size: large;
        }

        h1 {
            text-align: center;
            font-size: 75px;
            color: rgb(55, 55, 243);
        }

        .submit {
            margin-top: 10px;
            margin-left: auto;
            margin-right: auto;
            width: 15%;
            margin-bottom: 10px;
        }

        #dataTable {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #dataTable td, #dataTable th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #dataTable tr {
                background-color: #f2f2f2;
            }

                #dataTable tr:hover {
                    background-color: #ddd;
                }

            #dataTable th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #060746;
                color: white;
            }

        label {
            font-size: larger;
        }

        div.settings {
            display: grid;
            grid-template-columns: max-content max-content;
            grid-gap: 5px;
        }
    </style>
</head>
<body>
    <h1>Book library</h1>

    <button id="addButton">Add a new book</button>

    <div class="container">
        <p>Find books</p>
        <div class="settings">
            <label>Author</label>
            <input type="text" id="author" name="author">
            <label>Genre</label>
            <input type="text" id="genre" name="genre">
        </div>
        <input type="submit" class="submit" value="Find" id="submitButton">
    </div>

    <table id="dataTable">
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Pages</th>
            <th>Genre</th>
            <th>Lended</th>
            <th>Edit</th>
        </tr>
        <tbody id="tbodyTable">
        </tbody>
    </table>
</body>
</html>

